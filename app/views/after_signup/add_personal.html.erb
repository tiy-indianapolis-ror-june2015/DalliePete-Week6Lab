      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_area :username, :placeholder => 'username' %>
  </div>
  <div class="field">
    <%= f.text_area :first_name, :placeholder => 'First Name' %>
  </div>
  <div class="field">
    <%= f.text_area :last_name, :placeholder => 'Last Name' %>
  </div>
  <div class="field">
    <%= f.text_area :telephone_number, :placeholder => 'Telephone Number' %>
  </div>
  <div class="actions">
    <%= f.submit 'Save and Next' %> # will move to the next page
  </div>
<% end %>

